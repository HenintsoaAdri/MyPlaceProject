@model List<string>
@using (Ajax.BeginForm("ProduitResult", "Select", new AjaxOptions
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "produit-resultats",
}))
{
<div class="form-horizontal">
    @Html.Label("Rechercher un produit :")
    <div class="form-group">
        <div class="col-md-7">
            @Html.TextBox("query", null, new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.DropDownList("maxResult", new SelectList(Model), "9", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Recherche" class="btn btn-default" />
        </div>
    </div>
</div>
<div id="produit-resultats">
    @Html.Action("ProduitResult", "Select", new { maxResult = 9})
</div>
}
@model MyPlaceProject.Models.Commande

@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-sm-6">
        <div class="single category" ">
            <h3 class="side-title">MENU</h3>
            @Html.Action("Produit", "ClientSelect")
        </div>
    </div>
